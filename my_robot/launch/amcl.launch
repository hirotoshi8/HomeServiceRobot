<?xml version="1.0"?>

<launch>
  <!-- map server node-->
  <arg name="map_file" default="$(find my_robot)/maps/my_world.yaml"/>
  <node name="map_server" type="map_server" pkg="map_server" args="$(arg map_file)">
  </node>

  <!-- AMCL node-->
  <node name="amcl" type="amcl" pkg="amcl" output="screen">
    <remap from="scan" to="where_I_am/laser/scan"/>
    <param name="odom_fram_id" value="odom"/>
    <param name="odom_model_type" value="diff_corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>

    <!-- If you choose to define initial pose here-->
    <param name="initial_pose_x" value="0"/>
    <param name="initial_pose_y" value="0"/>
  </node>
  
  <!-- move base node-->
  <node name="move_base" type="move_base" pkg="move_base" respawn="false" output="screen">
    <remap from="scan" to="wehre_I_am/laser/scan"/>
    <param name="base_global_planner" value="navfn/NavfnROS"/>
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

    <!-- Fron configuraion -->
    <rosparam file="$(find udacity_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find udacity_bot)/config/costmap_common_params.yaml" command="load" ns="local_cost_map"/>
    <rosparam file="$(find udacity_bot)/config/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find udacity_bot)/config/global_costmap_params.yaml" command="load"/>
    <rosparam file="$(find udacity_bot)/config/base_local_planner_params.yaml" command="load"/>
  </node>



</launch>
